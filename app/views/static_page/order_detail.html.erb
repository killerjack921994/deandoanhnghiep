<div class="mainhome">
    <div id="header">
        <!-- Main navbar -->
        <div class="navbar navbar-inverse navbar-f">
            <%= render 'static_page/shared/nav' %>
        </div>
        <!-- /main navbar -->
    </div>
    <div id="mainbody" class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-4  col-md-3 sidebar-f">
                <%= render 'static_page/shared/sidebar' %>
            </div>
            <div class="col-xs-12 col-sm-8  col-md-9 content">
                <% flash.each do |message_type, message| %>
                    <div class="alert alert-<%= message_type %>">
                        <%= message %>
                    </div>
                <% end %>
                <div class="order-detail">
                    <h2 class="title"><%= t('.thankyou') %></h2>
                    <h4><%= t('.detail') %></h4>
                    <div>
                        <strong><%= t('.name-order') %></strong>
                        <%= @order.name %>
                    </div>
                    <div>
                        <strong><%= t('.date') %></strong>
                        <%= @order.created_at.strftime('%H:%M, %d/%m/%Y') %>
                    </div>
                    <div>
                        <strong><%= t('.method') %></strong>
                        <%= @order.method %>
                    </div>
                    <div>
                        <strong><%= t('.payment') %></strong>
                        <%= @order.payment %>
                    </div>
                    <div class="list-book">
                        <p><%= t('.list-book') %></p>
                        <table cellspacing="0" class="table-order">
                            <thead>
                                <th><%= t('.stt') %></th>
                                <th><%= t('.name') %></th>
                                <th><%= t('.price') %></th>
                            </thead>
                            <% @stt = 1 %>
                            <% @total = 0 %>
                            <% @order.book.each do |book| %>
                            <tbody>
                                <th><%= @stt %></th>
                                <th><%= book.name %></th>
                                <th><%= number_to_currency(book.price) %></th>
                            </tbody>
                            <% @stt += 1 %>
                            <% @total += book.price %>
                            <% end %>
                            <tbody>
                                <th colspan="3" style="text-align: right;"><%= t('.total') %><%= number_to_currency(@total) %></th>
                            </tbody>
                        </table>
                    </div>
                    <div class="actions text-right">
                        <%= link_to  t('.back'), root_path, class:"custombutton"  %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>